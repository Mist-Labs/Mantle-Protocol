# Shadow-swap Relayer Configuration
# Copy this file to .env and fill in your actual values

# ============================================
# Server Configuration
# ============================================
HOST=0.0.0.0
PORT=8080
HMAC_SECRET=0x13ba2da2ed4fb3xxxxxx...  # HMAC secret for API authentication

# ============================================
# Database Configuration
# ============================================
DATABASE_URL=postgresql://username:password@localhost:5432/shadow-swap-EVM
DB_MAX_CONNECTIONS=20

# ============================================
# Ethereum Configuration
# ============================================
# RPC endpoint for Ethereum (Sepolia testnet or mainnet)
ETHEREUM_RPC_URL=https://ethereum-sepolia-rpc.publicnode.com
# ETHEREUM_RPC_URL=https://eth-mainnet.g.alchemy.com/v2/YOUR_KEY

# WebSocket endpoint for real-time event monitoring
ETHEREUM_WS_URL=wss://ethereum-sepolia-rpc.publicnode.com
# ETHEREUM_WS_URL=wss://eth-mainnet.g.alchemy.com/v2/YOUR_KEY

# Private key for relayer operations (KEEP SECURE!)
ETHEREUM_PRIVATE_KEY=0x2ea06215c638e5ac29xxxxxx...

# Deployed contract addresses
ETHEREUM_INTENT_POOL_ADDRESS=0xcb46d916522D7c6853fcE2aa5F337e0a3626E263
ETHEREUM_SETTLEMENT_ADDRESS=0x7CCC9864125143e6c530506772Eaf5595DC14897

# Chain ID (11155111 = Sepolia, 1 = Mainnet)
ETHEREUM_CHAIN_ID=11155111
# ETHEREUM_CHAIN_ID=1

# Etherscan API key for contract verification
ETHERSCAN_APIKEY=SZHMPUZCAV1ZQIAEZVxxxxxx...

# ============================================
# Mantle Configuration
# ============================================
# RPC endpoint for Mantle
MANTLE_RPC_URL=https://rpc.sepolia.mantle.xyz

# WebSocket endpoint for real-time event monitoring
MANTLE_WS_URL=wss://mantle-sepolia.drpc.org

# Private key for relayer operations (KEEP SECURE!)
